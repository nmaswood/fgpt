{
  "name": "@fgpt/api",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "dependencies": {
    "@fgpt/precedent-iso": "workspace:^",
    "@fgpt/precedent-node": "workspace:^",
    "@google-cloud/profiler": "^6.0.0",
    "@google-cloud/trace-agent": "^7.1.2",
    "@types/lodash": "^4.14.202",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^8.4.1",
    "helmet": "^7.1.0",
    "jwks-rsa": "^3.1.0",
    "lodash": "^4.17.21",
    "pino": "^8.16.2",
    "slonik": "^37.2.0",
    "typescript": "^5.3.2",
    "zod": "^3.22.4"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -b -w",
    "dev": "concurrently -k --restart-tries -1  --names \"HTTP,WATCH\" -c \"bgBlue.bold,bgMagenta.bold\" --restart-tries 100 \"yarn run-server::develop\" \"yarn watch\"",
    "run-server::prod": "node dist/index.js",
    "run-job-runner": "node dist/job-runner/main.js",
    "run-server::develop": "node --inspect=9331 --watch dist/index.js | pino-pretty",
    "test:sql": "docker compose run --build db_test_migration",
    "test": "yarn vitest --threads=false src/tests",
    "lint": "eslint . --ext .ts",
    "fix": "yarn fix::lint; yarn fix::format",
    "fix::lint": "eslint . --ext .ts --fix",
    "fix::format": "prettier --write .",
    "check": "yarn check::lint && yarn check::format",
    "check::lint": "eslint . --ext .ts",
    "check::format": "prettier --check .",
    "clean": "yarn clean::dist",
    "clean::dist": "rm -rf tsconfig.tsbuildinfo dist"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/eslint": "^8.44.8",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.1",
    "@types/prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sql": "^2.5.0",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.1.0",
    "vitest": "^0.34.6"
  }
}
