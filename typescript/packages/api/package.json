{
  "name": "@fgpt/api",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "dependencies": {
    "@fgpt/precedent-iso": "workspace:^",
    "@fgpt/precedent-node": "workspace:^",
    "@types/lodash": "^4.14.195",
    "@types/multer": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^8.4.1",
    "helmet": "^7.0.0",
    "jwks-rsa": "^3.0.1",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "slonik": "^34.0.1",
    "typescript": "^5.1.3",
    "xlsx": "^0.18.5",
    "zod": "^3.21.4"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -b -w",
    "dev": "concurrently -k --restart-tries -1  --names \"HTTP,WATCH\" -c \"bgBlue.bold,bgMagenta.bold\" --restart-tries 100 \"yarn run-server::develop\" \"yarn watch\"",
    "run-server::prod": "node dist/index.js",
    "run-job-runner": "node dist/job-runner/main.js",
    "run-server::develop": "node --inspect=9331 --watch dist/index.js | pino-pretty",
    "test:sql": "docker compose run --build db_test_migration",
    "test": "yarn vitest --threads=false src/tests",
    "lint": "eslint . --ext .ts",
    "fix": "yarn fix::lint; yarn fix::format",
    "fix::lint": "eslint . --ext .ts --fix",
    "fix::format": "prettier --write .",
    "check": "yarn check::lint && yarn check::format",
    "check::lint": "eslint . --ext .ts",
    "check::format": "prettier --check .",
    "clean": "yarn clean::dist",
    "clean::dist": "rm -rf tsconfig.tsbuildinfo dist"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/eslint": "^8.40.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "concurrently": "^8.2.0",
    "eslint": "^8.43.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sql": "^2.3.2",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "vitest": "^0.32.2"
  }
}
