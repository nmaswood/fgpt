{
  "name": "@fgpt/job-runner",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "dependencies": {
    "@fgpt/precedent-iso": "workspace:^",
    "@fgpt/precedent-node": "workspace:^",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "pino": "^8.11.0",
    "slonik": "^33.3.1",
    "typescript": "^5.0.4",
    "zod": "^3.21.4"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -b -w",
    "run-job-runner": "node dist/index.js",
    "test:sql": "docker compose run --build db_test_migration",
    "test": "yarn vitest --threads=false src/tests",
    "lint": "eslint . --ext .ts",
    "fix": "yarn fix::lint; yarn fix::format",
    "fix::lint": "eslint . --ext .ts --fix",
    "fix::format": "prettier --write .",
    "check": "yarn check::lint && yarn check::format",
    "check::lint": "eslint . --ext .ts",
    "check::format": "prettier --check .",
    "clean": "yarn clean::dist",
    "clean::dist": "rm -rf tsconfig.tsbuildinfo dist"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/eslint": "^8.37.0",
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.1",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sql": "^2.3.2",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "vitest": "^0.30.1"
  }
}
