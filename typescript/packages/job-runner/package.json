{
  "name": "@fgpt/job-runner",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "dependencies": {
    "@fgpt/precedent-iso": "workspace:^",
    "@fgpt/precedent-node": "workspace:^",
    "@google-cloud/opentelemetry-cloud-trace-exporter": "^2.0.0",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/sdk-trace-base": "^1.13.0",
    "@opentelemetry/sdk-trace-node": "^1.13.0",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3",
    "pino": "^8.14.1",
    "slonik": "^33.3.1",
    "typescript": "^5.0.4",
    "zod": "^3.21.4"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -b -w",
    "dev": "node dist/index.js | pino-pretty",
    "run-job-runner": "node dist/index.js",
    "test:sql": "docker compose run --build db_test_migration",
    "test": "yarn vitest --threads=false src/tests",
    "lint": "eslint . --ext .ts",
    "fix": "yarn fix::lint; yarn fix::format",
    "fix::lint": "eslint . --ext .ts --fix",
    "fix::format": "prettier --write .",
    "check": "yarn check::lint && yarn check::format",
    "check::lint": "eslint . --ext .ts",
    "check::format": "prettier --check .",
    "clean": "yarn clean::dist",
    "clean::dist": "rm -rf tsconfig.tsbuildinfo dist"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/eslint": "^8.40.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.2.5",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "concurrently": "^8.0.1",
    "eslint": "^8.41.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sql": "^2.3.2",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "vitest": "^0.31.1"
  }
}
