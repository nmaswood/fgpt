{
  "name": "@fgpt/job-runner",
  "packageManager": "yarn@3.3.0",
  "private": true,
  "dependencies": {
    "@fgpt/precedent-iso": "workspace:^",
    "@fgpt/precedent-node": "workspace:^",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "pino": "^8.14.1",
    "slonik": "^34.0.1",
    "typescript": "^5.1.6",
    "zod": "^3.21.4"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -b -w",
    "run-server": "node dist/index.js",
    "run-server::develop": "node --inspect=9332 --watch dist/index.js | pino-pretty",
    "dev": "concurrently -k --restart-tries -1  --names \"HTTP,WATCH\" -c \"bgBlue.bold,bgMagenta.bold\" --restart-tries 100 \"yarn run-server::develop\" \"yarn watch\"",
    "test:sql": "docker compose run --build db_test_migration",
    "test": "yarn vitest --threads=false src/tests",
    "lint": "eslint . --ext .ts",
    "fix": "yarn fix::lint; yarn fix::format",
    "fix::lint": "eslint . --ext .ts --fix",
    "fix::format": "prettier --write .",
    "check": "yarn check::lint && yarn check::format",
    "check::lint": "eslint . --ext .ts",
    "check::format": "prettier --check .",
    "clean": "yarn clean::dist",
    "clean::dist": "rm -rf tsconfig.tsbuildinfo dist"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/eslint": "^8.44.0",
    "@types/express": "^4.17.17",
    "@types/node": "^20.4.2",
    "@types/prettier": "^2.7.3",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sql": "^2.3.2",
    "pino-pretty": "^10.0.1",
    "prettier": "^3.0.0",
    "vitest": "^0.33.0"
  }
}
